OTHER_SAMPLE_MAP = {
    "data": {
        "2016preVFP":  ["*Run201*"],
        "2016postVFP": ["*Run201*"],
        "2017":        ["*Run201*"],
        "2018":        ["*Run201*"]
    },
    "VBSVVH": {
        "2016preVFP":  ["VBSWWH_SSWW_MJJ-100*", "VBSWWH_OSWW_MJJ-100*", "VBSWZH_MJJ-100*", "VBSZZH_MJJ-100*"],
